# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and default charset
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf

[*.{md,py}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
